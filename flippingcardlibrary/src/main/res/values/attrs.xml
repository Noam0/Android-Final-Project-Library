<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FlippingCardView">

        <attr name="flipDuration" format="integer" />
        <attr name="elevation" format="dimension"/>
        <attr name="cardRadius" format="dimension"/>
        <attr name="padding" format="dimension"/>
        <attr name="cardBackgroundColor" format="color"/>
        <attr name="frontImage" format="reference"/>
        <attr name="backImage" format="reference"/>
        <attr name="flipStyle" format="enum">
            <enum name="rotation" value="0"/>
            <enum name="fade" value="1"/>
            <enum name="zoomInFlip" value="2"/>
            <enum name="slideLeft" value="3"/>
            <enum name="slideRight" value="4"/>
            <enum name="PendulumSlide" value="5"/>
        </attr>
    </declare-styleable>
</resources>